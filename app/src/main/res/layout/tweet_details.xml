<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tweet_details_author"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tweet_details_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tweet_details_author" />

    <TextView
        android:id="@+id/tweet_details_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tweet_details_date" />

    <TextView
        android:id="@+id/tweet_details_rt_count"
        android:layout_alignParentRight="true"
        android:layout_below="@id/tweet_details_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tweet_count_label"
        android:layout_toLeftOf="@id/tweet_details_rt_count"
        android:layout_below="@id/tweet_details_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/retweet_count"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" />

    <TextView
        android:id="@+id/tweet_details_fv_count"
        android:layout_below="@id/tweet_details_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/tweet_count_label" />

    <TextView
        android:layout_toLeftOf="@id/tweet_details_fv_count"
        android:layout_below="@id/tweet_details_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/favourite_count"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" />

</RelativeLayout>